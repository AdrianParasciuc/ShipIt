@using AccesaChallengePortal.Models
@model ChallengeAnswerModel

@{
    ViewBag.Title = "Answer Challenge";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Answer", "Challenge", null, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype="multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <div>
        <fieldset>
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Title)
            @Html.EditorFor(m => m.QuestionsAndAnswers)
        </fieldset>
    </div>

    <div class="form-group">
        <br>
        <input type="submit" class="btn btn-default" value="Answer" />
    </div>
}
<div>
    @Html.ActionLink("New Random Challenge", "Start")
</div>
